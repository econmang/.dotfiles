# Run `ghostty +show-config --default --docs` to view a list of
# Each config explained at https://ghostty.org/docs/config.

theme = Kanagawabones

window-padding-x = 0
window-padding-y = 0

background-opacity = 0.85
background-blur-radius = 20

# Tab styling
gtk-custom-css = tab-style.css
gtk-wide-tabs = false
gtk-tabs-location = top

# Vim bindings for split nav
keybind = ctrl+alt+h=goto_split:left
keybind = ctrl+alt+j=goto_split:down
keybind = ctrl+alt+k=goto_split:up
keybind = ctrl+alt+l=goto_split:right

# Remove some default keybinds:
keybind = alt+f4=ignore
keybind = ctrl+page_up=ignore
keybind = ctrl+shift+n=ignore
keybind = ctrl+shift+w=ignore
keybind = ctrl+page_down=ignore
keybind = ctrl+shift+arrow_left=ignore
keybind = ctrl+shift+arrow_right=ignore
keybind = alt+1=ignore
keybind = alt+2=ignore
keybind = alt+3=ignore
keybind = alt+4=ignore
keybind = alt+5=ignore
keybind = alt+6=ignore
keybind = alt+7=ignore
keybind = alt+8=ignore
keybind = alt+9=ignore
